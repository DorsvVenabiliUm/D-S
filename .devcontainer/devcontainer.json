{
  "name": "mysql-codespace",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y mysql-client && /bin/bash -lc 'mkdir -p .devcontainer/scripts && chmod +x .devcontainer/scripts/init-db.sh || true'",
  "postStartCommand": "/bin/bash -lc '.devcontainer/scripts/init-db.sh'",
  "forwardPorts": [3306],
  "remoteEnv": {
    "MYSQL_HOST": "mysql",
    "MYSQL_PORT": "3306",
    "MYSQL_DATABASE": "appdb",
    "MYSQL_USER": "app",
    "MYSQL_PASSWORD": "apppw"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mysql"
      ],
      "settings": {
        "sqltools.connections": [
          {
            "name": "mysql@codespace",
            "driver": "MySQL",
            "server": "mysql",
            "port": 3306,
            "database": "appdb",
            "username": "app",
            "password": "apppw",
            "previewLimit": 100,
            "connectionTimeout": 30
          }
        ],
        "sqltools.useNodeRuntime": "bundled"
      }
    }
  }
}
