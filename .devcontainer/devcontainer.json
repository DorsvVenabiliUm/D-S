{
  "name": "mysql-codespace",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y mysql-client",
  "forwardPorts": [3306],

  // Export DB connection info into the container env
  "remoteEnv": {
    "MYSQL_HOST": "mysql",
    "MYSQL_PORT": "3306",
    "MYSQL_DATABASE": "appdb",
    "MYSQL_USER": "app",
    "MYSQL_PASSWORD": "apppw"
  },

  // Auto-install VS Code extensions + pre-set SQLTools connection
  "customizations": {
    "vscode": {
      "extensions": [
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mysql"
      ],
      "settings": {
        // Pre-provision a connection in SQLTools (uses env vars above)
        "sqltools.connections": [
          {
            "name": "mysql@codespace",
            "driver": "MySQL",
            "server": "${env:MYSQL_HOST}",
            "port": ${env:MYSQL_PORT},
            "database": "${env:MYSQL_DATABASE}",
            "username": "${env:MYSQL_USER}",
            "password": "${env:MYSQL_PASSWORD}",
            "previewLimit": 50,
            "connectionTimeout": 30
          }
        ],
        // Make SQLTools use this connection by default (optional)
        "sqltools.useNodeRuntime": "bundled"
      }
    }
  }
}
